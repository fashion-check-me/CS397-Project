<%= form_for :outfit, :url => outfits_path, :html => { :multipart => true } do |f| %>
<div class="container">
  <div class="row">
    <div class="col-md-5 col-md-offset-3">
      <h3>Name</h3>
      <div class="field">
        <%= f.text_field :name, :class => "form-control" %> 
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-md-5 col-md-offset-3">
      <h3>Description</h3>
      <div class="field">
        <%= f.text_area :description, :class => "form-control" %>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-md-2 col-md-offset-3">
      <h3>Gender</h3>
      <%= select_tag(:gender, options_for_select(@gender_options), :class => 'form-control') %>
    </div>
  </div>
  <div class="row">
    <div class="col-md-5 col-md-offset-3">
      <h3>Image</h3>
      <%= f.file_field :image, :class => "btn" %>
    </div>
  </div>
  <div class="row">
    <div class="col-md-5 col-md-offset-3">
      <%= f.submit :class => "btn btn-lg" %>
    </div>
  </div>
</div>
<% end %>
