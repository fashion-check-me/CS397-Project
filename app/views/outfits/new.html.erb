<%= form_for :outfit, :url => outfits_path, :html => { :multipart => true } do |f| %>
<div class="container">
  <div class="row">
    <div class="col-sm-5">
      <h3>Title</h3>
      <div class="row">
        <div class="col-sm-12">
          <%= f.text_field :title, :class => "form-control" %>
        </div>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-sm-5">
      <h3>Description</h3>
      <div class="row">
        <div class="col-sm-12">
          <%= f.text_area :description, :class => "form-control" %>
        </div>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-sm-5">
      <h3>Image</h3>
      <div class="row">
        <div class="col-sm-12">
          <%= f.file_field :image %>
        </div>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-sm-5">
      <%= f.submit :class => "btn btn-lg" %>
    </div>
  </div>
</div>
<% end %>
