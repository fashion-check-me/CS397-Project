<h3>New Tag for <%= @outfitid %></h3>
<%= form_for :tag, :url => tags_path do |f| %>
  <%= f.hidden_field :outfitid, :value => @outfitid %>

  <div>
  <%= f.label :category %>
  <%= f.text_field :category %>
  </div>

  <div>
  <%= f.label :pattern %>
  <%= f.text_field :pattern %>
  </div>

  <div>
  <%= f.label :brand %>
  <%= f.text_field :brand %>
  </div>

  <div>
  <%= f.label :color %>
  <%= f.text_field :color %>
  </div>
  
  <div>
    <%= f.submit "Save Tag" %>
  </div>
<% end %>
