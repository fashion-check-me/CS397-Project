<div class="container">
  <%= form_for :search, :url => search_search_path do |f| %>
  <div class="col-md-5 col-md-offset-3">
   <div class="row"> <h1>Search</h1></div>
    <div class="row">
      <%= f.label :color %>
      <%= f.text_field :color, :class => "form-control" %>
    </div>
    <div class="row">
      <%= f.label :pattern %>
      <%= f.text_field :pattern, :class => "form-control" %>
    </div>
    <div class="row">
      <%= f.label :category %>
      <%= f.text_field :category, :class => "form-control" %>
    </div>
    <div class="row">
      <%= f.label :brand %>
      <%= f.text_field :brand, :class => "form-control" %>
    </div>
    <div class="row">
      <hr />
      <%= f.submit "Search", :class => "btn btn-lg" %>
    </div>
  </div>
  <% end %>
</div>
